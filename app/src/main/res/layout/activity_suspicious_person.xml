<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#808080"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/Active_shooter"
            android:text="Suspicious Person"
            android:textSize="30dp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Active_shooter"
            android:background="#808080"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text=" 1. Do not physically confront the person"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>

            <TextView
                android:id="@+id/text2"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="2. Do not let anyone in to a locked building/office."
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text3"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="3. Do not block the person's access to an exit"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text4"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="4. Call 911. Provide as much information as possible about the person and his/her direction of travel."
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                >
            </TextView>




        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>