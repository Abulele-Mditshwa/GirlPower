<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#808080"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/Active_shooter"
            android:text="Hazardous Materials "
            android:textSize="30dp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Active_shooter"
            android:background="#808080"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text=" 1. If an emergency develops or if anyone is in danger, call 911."
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                >
            </TextView>

            <TextView
                android:id="@+id/text2"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="2. Move away from the site of the hazard to a safe location (up wind if possible)."
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text3"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="3. Follow the instructions of emergency personnel."
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text4"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="4. Alert others to stay clear of the area."
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                >
            </TextView>

            <TextView
                android:id="@+id/text5"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="5. Notify emergency personnel if you have been exposed to the hazard or have information about its release."
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                >
            </TextView>



        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>