<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#808080"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/Active_shooter"
            android:text="Power Failure"
            android:textSize="30dp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Active_shooter"
            android:background="#808080"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text=" 1. Remain calm. Provide assistance to other if neccessary."
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>

            <TextView
                android:id="@+id/text2"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="2. Move cautiously to a lighted area. Exits may be indicated by lighted signs if the emergency power is operating."
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text3"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="3. If asked to evacuate the building by emergency personnel, exit as calmly and carefully as possible"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                >
            </TextView>


            <TextView
                android:id="@+id/text4"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="4. Do not re-enter the building until authorized by authorities. Listen for information regarding building/college closings"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                >
            </TextView>





        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>